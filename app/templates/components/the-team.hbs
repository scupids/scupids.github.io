<div class="member-container">
    {{#each people as |person|}}
    <div class="member" data-id="{{person.id}}" {{action 'displayMemberContent' this}}>
        <img class="member-img" src="{{person.img}}">
        <div class="member-name">{{person.name}}</div>
    </div>
    {{/each}}
</div>
{{yield}}
